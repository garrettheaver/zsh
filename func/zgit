zgit_prompt() {
  zgit_is_repo || return

  # grab the current revision and the name of the branch we're on
  zgit_revision=$(git rev-parse --short HEAD 2>/dev/null)
  zgit_branch=$(git name-rev --name-only --no-undefined --always HEAD 2>/dev/null)
  
  if [ -z $zgit_branch ]; then
    zgit_branch="master"
  fi

  # check if there has ever been a commit to the repository
  git_timestamp=$(git log -n1 --pretty=format:%at 2>/dev/null)

  if [ -z $git_timestamp ]; then
    commit_message="$zc[red]∞"
  elif zgit_has_any_modifications; then
    commit_message="$zc[red]±"
  else
    commit_message="$zc[green]≡"
  fi

  echo "$zc[white]:[$zc[cyan]$zgit_branch$zc[white]|$zc[magenta]$zgit_revision$zc[white]|$commit_message$zc[white]]"
}

zgit_is_repo() {
  if [ -z $(git rev-parse --git-dir 2>/dev/null) ]; then
    return 1
  else
    return 0
  fi
}

zgit_has_any_modifications() {
  local -a modified_files
  modified_files=($(git status --porcelain 2>/dev/null))
  if [ $#modified_files -gt 0 ]; then
    return 0
  else
    return 1
  fi
}
