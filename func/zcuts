aa() {
  if zgit_is_repo; then
    git add . --all
  fi
}

st() {
  if zgit_is_repo; then
    git status --short $@
  fi
}

df() {
  if zgit_is_repo; then
    git diff $@
  fi
}

cm() {
  if zgit_is_repo; then
    git commit $@
  fi
}

lg() {
  if zgit_is_repo; then
    git log --pretty=oneline --graph --abbrev-commit --decorate $@
  fi
}
