# keep reference to original commands
_aa=`which aa`
_ad=`which ad`
_ap=`which ap`
_st=`which st`
_df=`which df`
_cm=`which cm`
_lg=`which lg`

aa() {
  if zgit_is_repo; then
    git add . --all
  else
    $_aa $@
  fi
}

ad() {
  if zgit_is_repo; then
    git add $@
  else
    $_ad $@
  fi
}

ap() {
  if zgit_is_repo; then
    ad -p
  else
    $_ap $@
  fi
}

st() {
  if zgit_is_repo; then
    git status --short $@
  elif zsvn_is_repo; then
    svn status $@
  else
    $_st $@
  fi
}

df() {
  if zgit_is_repo; then
    git diff $@
  else
    $_df $@
  fi
}

cm() {
  if zgit_is_repo; then
    git commit $@
  else
    $_cm $@
  fi
}

lg() {
  if zgit_is_repo; then
    git log --pretty=oneline --graph --abbrev-commit --decorate $@
  else
    $_lg $@
  fi
}
